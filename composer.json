{
    "name": "zfegg/content-validation",
    "description": "Content validation for PSR-15 middleware or laminas-mvc",
    "keywords": [
        "validation",
        "middleware",
        "laminas",
        "mezzio",
        "psr15"
    ],
    "require": {
        "php": ">=7.4",
        "psr/http-server-middleware": "^1.0",
        "opis/json-schema": "^2.1",
        "ext-json": "*"
    },
    "license": "MIT",
    "require-dev": {
        "ext-pdo": "*",
        "slevomat/coding-standard": "^7.0.12",
        "phpunit/phpunit": "^9.4",
        "laminas/laminas-eventmanager": "^3.0",
        "laminas/laminas-diactoros": "^2.5",
        "mezzio/mezzio-router": "^3.0",
        "slim/slim": "^4.8.1",
        "phpspec/prophecy-phpunit": "^2.0",
        "doctrine/orm": "^2.9",
        "doctrine/cache": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "Zfegg\\ContentValidation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZfeggTest\\ContentValidation\\": "test/"
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "extra": {
        "laminas": {
            "config-provider": "Zfegg\\ContentValidation\\ConfigProvider"
        }
    }
}
