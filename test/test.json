{
  "$id": "http://api.example.com/profile.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "$transformers": [
        "laminas::StripTags",
        {
          "$func": "strtolower"
        },
        "strtoupper"
      ]
    },
    "transformer-string": {
      "type": "string",
      "$transformers": "strtoupper"
    },
    "transformer-array": {
      "type": "string",
      "$transformers": ["strtoupper"]
    },
    "transformer-object": {
      "type": "string",
      "$transformers": {
        "$func": "strtoupper"
      }
    },
    "age": {
      "type": "integer",
      "minimum": 18,
      "maximum": 100
    },
    "state": {
      "type": "boolean",
      "default": true
    },
    "sub" : {
      "type": "object",
      "properties": {
        "foo" : {
          "type": "number"
        },
        "bar" : {
          "type": "string",
          "default": "bar"
        }
      },
      "required": ["foo", "bar"]
    },
    "list": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "integer"
        }
      }
    },
    "list-obj": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            }
          }
        }
      }
    }
  },
  "required": ["name", "age"],
  "additionalProperties": false
}